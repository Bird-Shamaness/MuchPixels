body
 include ../partials/header

 .container
  include ../partials/flash
   block content
    h1 Much Pixels Messenger
    div.container
        div#userFormArea.row
            div.col-md-12
                form#userForm
                    div.form-group
                        label Enter Username
                        input#username.form-control.input-lg
                        br
                        button.btn.btn-success.btn-lg(type='submit') Login

        div#messageArea.row
            div.col-md-4
                div.well
                    h3 Online Users
                        ul#users.list-group

            div.col-md-8
                div#chat.chat
                form#messageForm
                    div.form-group
                        label Enter Message
                        textarea#message.form-control.input-lg
                        br
                        button.btn.btn-success.btn-lg(type='submit') Send Message
include ../partials/footer

    script(src='/js/lib/jquery-2.2.4.min.js')
    script(src='/js/lib/bootstrap.min.js')
    script(src='/js/main.js')
    script(src='/socket.io/socket.io.js')
