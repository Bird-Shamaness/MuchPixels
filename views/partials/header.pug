.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')
        | Pixels
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li(class=(title == 'Home') ? 'active' : undefined)
          a(href='/') Home 
        li(class=(title == 'Hot') ? 'active' : undefined)
          a(href='/photo/hot') Hot
        li(class=(title == 'Trending') ? 'active' : undefined)
          a(href='/photo/trending') Trending
        li(class=(title == 'Search') ? 'active' : undefined)
          a(href='/search') Search
        li(class=(title == 'Contact') ? 'active' : undefined)
          a(href='/contact') Contact
      ul.nav.navbar-nav.navbar-right
        if !user
          li(class=(title == 'Login') ? 'active' : undefined)
            a(href='/login') Login
          li(class=(title == 'Create Account') ? 'active' : undefined)
            a(href='/signup') Create Account
        else
         li(class=(title == 'Messenger') ? 'active' : undefined)
          a(href='/messenger') Messenger
         li(class=(title == 'Upload') ? 'active' : undefined)
          a(href='/upload') Upload
          li.dropdown(class=(title == 'Account Management') ? 'active' : undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              if user.profile.picture
                img(src=user.profile.picture)
              else
                img(src=user.gravatar(60))
              span= user.profile.name || user.username || user.email || user.id
              i.caret
            ul.dropdown-menu
              li
                a(href='/account') My Account
              li.divider
              li
                a(href='/logout') Logout
