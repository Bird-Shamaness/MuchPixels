html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='theme-color' content='#4DA5F4')
    meta(name='csrf-token', content=_csrf)
    title #{title} - Photo store
    link(rel='stylesheet', href='/css/landing-page.css')
    link(rel='shortcut icon', href='/favicon.png')
    
    script(src='/js/lib/jquery-2.2.4.min.js')

  body
    div.home-image-wrapper
       h1.header-title PIXELS
       h3.header-subtitle MORE THAN JUST PHOTOGRAPHY
       if !user
          div.button-wrapper
             a.button-discover(href="photo/hot") Discover
             a.button-signin(href="/login") Sign in
             a.button-signup(href="/signup") Sign up
       else
          div.profile-details-wrapper
             if user.profile.picture
              a.profile-link(href="/account")
                  img.profile-pic(src=`${user.profile.picture}`)
             else
               a.profile-link(href="/account")
                img(src=user.gravatar(60))
             a.profile-name(href="/account")= `${user.profile.name || user.username}`
             a.logout-link(href="/logout")   
                i.logout-pic.fa.fa-sign-out
          div.button-wrapper
             a.button-discover(href="photo/hot") Discover
             a.button-profile(href="/upload") Upload
    script.
       $(document).ready( function(){
         $('.header-title').animate({
           opacity: '1',
         }, 1500, function(){
            $('.header-subtitle').animate({
               opacity: '1',
            }, 1500);
            $('.profile-details-wrapper').animate({
              opacity: '1',
            }, 2000);
         });      
       });
       
    script(src='/js/lib/bootstrap.min.js')
    script(src='/js/main.js')

    