extends ../layout

block content
  div.other-profile-wrapper.container-fluid
    img.profile-pic.col-xs-6.col-sm-5.col-md-3.col-lg-2.col-xl-4(src=`${userModel.picture}`)
    p.title= userModel.name
    p.date-registered= "Registered: " + userModel.registered
    p.user-description= userModel.description
  hr.profile-separator
  p.subtitle= `All uploaded photos ( ${userModel.photos.length} )` 
  each photo in userModel.photos
    div.single-photo-other.col-xs-12.col-sm-10.col-md-4.col-lg-4.col-xl-2
        a.picture-title(href=`/photo/details/${photo.id}`)= photo.title 
        
        a.link-to-picture(href=`/photo/details/${photo.id}`)
          div.picture-wrapper
              img.img-responsive(src=`${photo.url}`)
        p.picture-description= `${photo.description.substring(0, 35)}...`   
        p.picture-votes= `Influence: ${photo.upvotes.length}`   